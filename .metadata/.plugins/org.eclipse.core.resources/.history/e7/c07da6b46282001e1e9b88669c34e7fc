package com.cgpm.api.model.entities;

import java.io.Serializable;

import com.cgpm.api.base.BaseEntity;

import jakarta.persistence.Column;
import jakarta.persistence.Entity;
import jakarta.persistence.FetchType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.Table;
import jakarta.persistence.Transient;

/**
 * @author michel.pech
 */

@Entity
@Table(name = "membros")
public class Membro extends BaseEntity<Long> implements Serializable {

	private static final long serialVersionUID = 3948287077221686045L;
	
	private Pessoa pessoa;
	
	//Transient
	private Projeto projeto;
	
	public Membro() {
	}
	
	public Membro(Long id) {
		this.setId(id);
	}	
	
	@Id	
	@Column(name = "idprojeto")
	@Override
	public Long getId() {
		return this.getId();
	}	

	@ManyToOne(fetch = FetchType.LAZY)
	@JoinColumn(name = "idpessoa")		
	public Pessoa getPessoa() {
		return pessoa;
	}

	public void setPessoa(Pessoa pessoa) {
		this.pessoa = pessoa;
	}
	
	// Transient
	
	@Transient
	public Projeto getProjeto() {
		return projeto;
	}

	public void setProjeto(Projeto projeto) {
		this.projeto = projeto;
	}			
	
}
