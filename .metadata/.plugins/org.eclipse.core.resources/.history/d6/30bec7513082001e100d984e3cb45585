package com.cgpm.api.model.entities;

import java.io.Serializable;

import com.cgpm.api.base.BaseEntity;

import jakarta.persistence.Entity;
import jakarta.persistence.FetchType;
import jakarta.persistence.Id;
import jakarta.persistence.JoinColumn;
import jakarta.persistence.ManyToOne;
import jakarta.persistence.Table;

/**
 * @author michel.pech
 */

@Entity
@Table(name = "membros")
public class Membro extends BaseEntity<Projeto> implements Serializable {

	private static final long serialVersionUID = 3948287077221686045L;
	
	private Pessoa pessoa;
	
	public Membro() {
	}
	
	public Membro(Projeto projeto) {
		this.setId(projeto);
	}	
	
	@Id
	@Override
	@ManyToOne(fetch = FetchType.LAZY)
	@JoinColumn(name = "idprojeto")		
	public Projeto getId() {
		return this.getId();
	}
	
	@Override
	public void setId(Projeto projeto) {
		this.setId(projeto);
	}

	@ManyToOne(fetch = FetchType.LAZY)
	@JoinColumn(name = "idpessoa")		
	public Pessoa getPessoa() {
		return pessoa;
	}

	public void setPessoa(Pessoa pessoa) {
		this.pessoa = pessoa;
	}	
	
}
