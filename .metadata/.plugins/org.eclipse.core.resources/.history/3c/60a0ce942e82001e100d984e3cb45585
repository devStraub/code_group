package com.cgpm.api.repositories;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.domain.Example;
import org.springframework.data.domain.ExampleMatcher;
import org.springframework.stereotype.Repository;

import com.cgpm.api.model.entities.Membro;
import com.cgpm.api.repositories.jpa.MembroJPA;

/**
 * @author michel.pech
 */

@Repository
public class MembroRepository {
	
	@Autowired
	private MembroJPA membroJpa;
	
	public Membro find(Membro entity) {
	    Example<Membro> example = Example.of(entity, ExampleMatcher.matching().withIgnoreNullValues());
	    return membroJpa.findOne(example).orElse(null);
	}
}
